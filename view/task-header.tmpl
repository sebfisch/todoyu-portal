<div id="task-{$task.id}" class="task status{ucfirst $task.statuskey} {$task.class}">
	<h3 id="task-{$task.id}-header" class="contextmenutask" name="task-{$task.id}" onclick="Todoyu.Ext.portal.Task.toggleDetails({$task.id})">

		<span class="headLabel bcStatus{$task.status}" title="{$task.fulltitle}">
			<span class="taskDate date" title="{Label core.deadline}: {date_format $task.date_deadline "%d.%m.%y"} / {Label core.start}: {date_format $task.date_start "%d.%m.%y"}">
				{date_format $task.date_deadline "%d.%m.%y"}&nbsp;
			</span>
			<span class="customer">
				{if $task.company.shortname}{$task.company.shortname}{else}{$task.company.title}{/if}&nbsp;
			</span>
			<span class="projectName" title="{Label project.project}: {$task.project.title} (ID: {$task.project.id}) / {Label task.task}: {$task.title}">
				{htmlencode $task.project.title|truncate:45} - {htmlencode $task.title|truncate:45}
			</span>
		</span>
		<span class="billableTime" title="{Label task.billableTime} ({Label timetracking.tracked_time}: {Workload $task.tracked_time true})">{Workload $task.tracked_time true}</span>
		<span class="taskNumber" title="{Label project.taskno}: {$task.id_project}.{$task.tasknumber}">{$task.id_project}.{$task.tasknumber}</span>

		<span class="additionalStuff">
			{foreach $infoIcons infoIcon}
				<span id="{$infoIcon.id}" class="{$infoIcon.class}" title="{Label $infoIcon.label true}" {if $infoIcon.onclick}onclick="{$infoIcon.onclick}"{/if}></span>
			{/foreach}
			{foreach $additionalIcons icon}
				<span class="{$icon.class}" title="{$icon.label}"></span>
			{/foreach}
		</span>

	</h3>
	{$details}
</div>